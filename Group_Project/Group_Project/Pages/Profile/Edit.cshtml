@page
@model Group_Project.Pages.Profile.EditModel
@{
}

@{ ViewData["Title"] = "EditProfile";
                Layout = "~/Pages/Shared/_Layout.cshtml"; }

<h1>EditProfile</h1>

<h4>User</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />
            <input type="hidden" asp-for="User.Email">
            <input type="hidden" asp-for="User.UserType">
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                @Html.Raw(Model.User.Email)
            </div>
            <div class="form-group">
                <label asp-for="User.Passwrd" class="control-label"></label>
                <input type="password" asp-for="User.Passwrd" value="" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label"></label>
                <input asp-for="User.FirstName" class="form-control" />
                <span asp-validation-for="User.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"></label>
                <input asp-for="User.LastName" class="form-control" />
                <span asp-validation-for="User.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Birthdate" class="control-label"></label>
                <input asp-for="User.Birthdate" class="form-control" />
                <span asp-validation-for="User.Birthdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AddressLine1" class="control-label"></label>
                <input asp-for="User.AddressLine1" class="form-control" />
                <span asp-validation-for="User.AddressLine1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.AddressLine2" class="control-label"></label>
                <input asp-for="User.AddressLine2" class="form-control" />
                <span asp-validation-for="User.AddressLine2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.State" class="control-label"></label>
                <input asp-for="User.State" class="form-control" />
                <span asp-validation-for="User.State" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.City" class="control-label"></label>
                <input asp-for="User.City" class="form-control" />
                <span asp-validation-for="User.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Zip" class="control-label"></label>
                <input asp-for="User.Zip" class="form-control" />
                <span asp-validation-for="User.Zip" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Bio" class="control-label"></label>
                <input asp-for="User.Bio" class="form-control" />
                <span asp-validation-for="User.Bio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Link1" class="control-label"></label>
                <input asp-for="User.Link1" class="form-control" />
                <span asp-validation-for="User.Link1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Link2" class="control-label"></label>
                <input asp-for="User.Link2" class="form-control" />
                <span asp-validation-for="User.Link2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.Link3" class="control-label"></label>
                <input asp-for="User.Link3" class="form-control" />
                <span asp-validation-for="User.Link3" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="User.ProfilePic" class="control-label"></label>
                <input type="file" class="form-control" id="uploadBox" name="files" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./ProfileDetails">Back to List</a>
</div>

@section Scripts{ 
<script>
    function ValidateInput() {
        if (document.getElementById("uploadBox").value == "") {
            swal('Error', 'Please select an Image', 'error')
            return false;
        }
        return true;
    }
</script>
@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
