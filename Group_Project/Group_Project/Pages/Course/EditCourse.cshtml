            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Course.Thursday" /> @Html.DisplayNameFor(model => model.Course.Thursday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Course.Friday" /> @Html.DisplayNameFor(model => model.Course.Friday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Course.Saturday" /> @Html.DisplayNameFor(model => model.Course.Saturday)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Course.Sunday" /> @Html.DisplayNameFor(model => model.Course.Sunday)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Course.StartTime" class="control-label"></label>
