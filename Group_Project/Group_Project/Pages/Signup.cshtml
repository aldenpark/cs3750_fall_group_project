@page
@model Group_Project.Pages.SignupModel
@{
    ViewData["Title"] = "Sign Up";
}
<h1>@ViewData["Title"]</h1>

<form method="post">
    <div class="col-8 pt-3">
        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Email">Email</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Email" class="form-control" />
                <span class="text-danger" asp-validation-for="User.Email"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Passwrd">Password</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Passwrd" class="form-control">
                <span class="text-danger" asp-validation-for="User.Passwrd"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.FirstName">First Name</label>
            </div>
            <div class="col-9">
                <input asp-for="User.FirstName" class="form-control">
                <span class="text-danger" asp-validation-for="User.FirstName"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.LastName">Last Name</label>
            </div>
            <div class="col-9">
                <input asp-for="User.LastName" class="form-control">
                <span class="text-danger" asp-validation-for="User.LastName"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Birthdate">Birth Date</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Birthdate" class="form-control">
                <span class="text-danger" asp-validation-for="User.Birthdate"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.AddressLine1">Address Line 1</label>
            </div>
            <div class="col-9">
                <input asp-for="User.AddressLine1" class="form-control">
                <span class="text-danger" asp-validation-for="User.AddressLine1"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.AddressLine2">Address Line 2</label>
            </div>
            <div class="col-9">
                <input asp-for="User.AddressLine2" class="form-control">
                <span class="text-danger" asp-validation-for="User.AddressLine2"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.State">State</label>
            </div>
            <div class="col-9">
                <input asp-for="User.State" class="form-control">
                <span class="text-danger" asp-validation-for="User.State"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.City">City</label>
            </div>
            <div class="col-9">
                <input asp-for="User.City" class="form-control">
                <span class="text-danger" asp-validation-for="User.City"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Zip">Zip Code</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Zip" class="form-control">
                <span class="text-danger" asp-validation-for="User.Zip"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Bio">Bio</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Bio" class="form-control">
                <span class="text-danger" asp-validation-for="User.Bio"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Link1">Social Link 1</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Link1" class="form-control">
                <span class="text-danger" asp-validation-for="User.Link1"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Link2">Social Link 2</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Link2" class="form-control">
                <span class="text-danger" asp-validation-for="User.Link2"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3">
                <label asp-for="User.Link3">Social Link 3</label>
            </div>
            <div class="col-9">
                <input asp-for="User.Link3" class="form-control">
                <span class="text-danger" asp-validation-for="User.Link3"></span>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-3"></div>
            <div class="col-9">
                <input type="submit" value="Submit" /><br />
            </div>
        </div>
</form>