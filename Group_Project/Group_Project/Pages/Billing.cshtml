@page
@model Group_Project.Pages.BillingModel
@{
    ViewData["Title"] = "Billing";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>@ViewData["Title"]</h1>

<form method="post">

    <label>Account Balance</label> <label>@Model.balance</label><br />
    <!--Nothing to connect to yet-->

    <label>Amount Due</label> <label>@Html.DisplayFor(model => model.User.AmmountDue)</label><br />

    <label>Full Name</label>
    <input asp-for="billingSubmission.Name" type="text" class="form-control" />

    <label>Credit Card #</label>
    <input asp-for="billingSubmission.CreditCardNum" type="text" class="form-control" />

    <label>Security Code</label>
    <input asp-for="billingSubmission.SecurityCode" type="text" class="form-control" />

    <label>Expiration Month</label>
    <input asp-for="billingSubmission.ExpMonth" type="number" class="form-control" />

    <label>Expiration Year</label>
    <input asp-for="billingSubmission.ExpYear" type="number" class="form-control" />
    <!--Currently just a standard input box probably should change to a date picker when this is made functional-->

    <label>Payment Amount</label>
    <input asp-for="billingSubmission.Amount" type="number" class="form-control" />

    <input type="submit" value="Submit" /><br />
</form>