@page
@model Group_Project.Pages.ProfileDetailsModel
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}
<h1>Profile</h1>

<h4>User Information</h4>
<div class="row">
    <div class="col-md-4">
        <ul>
            @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="User.ID" />*@
            <div class="form-group">
                <label asp-for="User.Email" class="control-label"></label>
                <label href="User.Email"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Passwrd" class="control-label"></label>
                <label href="User.Password"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.FirstName" class="control-label"></label>
                <label href="User.FirstName"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.LastName" class="control-label"></label>
                <label href="User.LastName"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Birthdate" class="control-label"></label>
                <label href="User.Birthdate"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.AddressLine1" class="control-label"></label>
                <label href="User.AddressLine1"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.AddressLine2" class="control-label"></label>
                <label href="User.AddressLine2"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.State" class="control-label"></label>
                <label href="User.State"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.City" class="control-label"></label>
                <label href="User.City"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Zip" class="control-label"></label>
                <label href="User.Zip"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Bio" class="control-label"></label>
                <label href="User.Bio"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Link1" class="control-label"></label>
                <label href="User.Link1"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Link2" class="control-label"></label>
                <label href="User.Link2"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.Link3" class="control-label"></label>
                <label href="User.Link3"></label>
            </div>
            <div class="form-group">
                <label asp-for="User.ProfilePic" class="control-label"></label>
                <img class="rounded-circle" style="width:50px;height:50px;" src="User.ProfilePic" alt="">
            </div>
            <div class="form-group">
                <input type="button" value="Edit" href="/EditProfile?id={User.ID}" />
            </div>
        </ul>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}